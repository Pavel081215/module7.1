<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

    <bean class="com.hibernate.base.Main" name="main">
        <property name="removeInit" value="false"/>
        <property name="saveInit" value="false"/>
    </bean>

    <bean name="employeeController" class="com.hibernate.base.controller.EmployeeController">

    </bean>

    <bean name="hEmployeeDao" class="com.hibernate.base.dao.hibernate.HEmployeeDao">

    </bean>


    <bean name="dishController" class="com.hibernate.base.controller.DishController">

    </bean>

    <bean name="hDishDao" class="com.hibernate.base.dao.hibernate.HDishDao">

    </bean>

    <bean name="orderController" class="com.hibernate.base.controller.OrderController">

    </bean>

    <bean name="hOrderDao" class="com.hibernate.base.dao.hibernate.HOrderNameDao">

    </bean>


    <bean name="stockDao" class="com.hibernate.base.dao.hibernate.HStockDao"/>

    <bean name="stoneController" class="com.hibernate.base.controller.StockController"/>

    <bean name="hIngredientDao" class="com.hibernate.base.dao.hibernate.HIngredientDao"/>

    <bean name="ingredientController" class="com.hibernate.base.controller.IngredientController"/>


    <bean name="hMenuDao" class="com.hibernate.base.dao.hibernate.HMenuDao"/>

    <bean name="menuController" class="com.hibernate.base.controller.MenuController"/>

    <bean name="stockServiceImp" class="com.hibernate.base.service.StockServiceImp"/>


    <bean name="dishInKitchenDao" class="com.hibernate.base.dao.hibernate.HDishInKichenDao"/>

    <bean name="dishInKitchenServiceImp" class="com.hibernate.base.service.DishInKitchenServiceImp"/>

    <bean name="dishInKitchenController" class="com.hibernate.base.controller.DishInKitchenController"/>

</beans>














